public class Game {
    private Player player1;
    private Player player2;
    private int marbles;
    private Player currentPlayer;
    private boolean gameOver;
    
    public Game(Player player1, Player player2, int marbles)
    {
        this.player1 = player1;
        this.player2 = player2;
        this.marbles = marbles;
    }
    
    public Player getCurrentPlayer()
    {
        return currentPlayer;
    }
    
    public int getMarblesRemaining()
    {
        return marbles;
    }
    
    public boolean isGameOver()
    {
        if (marbles == 0)
        {
            return gameOver = true;
        }
        else
        {
            return gameOver = false;
        }
    }
           
    public void removeFromPile(int amount)
    {
        boolean wereRemoved;
        if (amount > 3)
        {
            wereRemoved = false;
            marbles = marbles - 0;
        }
        else if (amount < 1)
        {
            wereRemoved = false;
            marbles = marbles - 0;
        }
        if (amount <= 3)
        {
            wereRemoved = true;
            marbles = marbles - amount;
            
            }
        }
    
    public void nextPlayer()
    {
        if (player1 == currentPlayer)
        {
            currentPlayer = player2;
        }
        else
        {
            currentPlayer = player1;
        }
    }
    
    public void displayPile(Graphics g, int x, int y)
    {
        Pile.drawPile();
        
        
    }
    
    public void displayPile()
    {
        Pile.printPile;
    }
    
    
        
    }

