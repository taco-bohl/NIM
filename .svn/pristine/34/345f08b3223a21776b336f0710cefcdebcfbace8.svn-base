    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        // TODO add your handling code here:

        String name1 = JOptionPane.showInputDialog("Player 1 please enter your name: ");
        player1 = new Player(name1);

        String name2 = JOptionPane.showInputDialog("Player 2 enter your name: ");
        player2 = new Player(name2);
        player1Label.setText(player1.getName());
        player2Label.setText(player2.getName());
        myGame = new Game(player1, player2, 21);
        myGame.nextPlayer();
        jTextArea2.setText("Its " + myGame.getCurrentPlayer().getName() + "'s turn." + " There are " + myGame.getMarblesRemaining() + " marbles remaining.");
        if (myGame.getCurrentPlayer() == player1) {
            player2Take2Button.setEnabled(false);
            player2Take1Button.setEnabled(false);
            player2Take3Button.setEnabled(false);
            player1Take1Button.setEnabled(true);
            player1Take2Button.setEnabled(true);
            player1Take3Button.setEnabled(true);

        } else if (myGame.getCurrentPlayer() == player2) {
            player1Take1Button.setEnabled(false);
            player1Take2Button.setEnabled(false);
            player1Take3Button.setEnabled(false);
            player2Take2Button.setEnabled(true);
            player2Take1Button.setEnabled(true);
            player2Take3Button.setEnabled(true);
        }


    }//GEN-LAST:event_jButton2ActionPerformed

